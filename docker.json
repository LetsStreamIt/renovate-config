{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>letsstreamit/renovate-config"
    ],
    "packageRules": [
        {
            "description": "Trigger a patch update if any Dockerfile gets updated",
            "matchPaths": [
                "docker-compose.yml",
                "docker-compose.yaml"
            ],
            "semanticCommitScope": "core-deps"
        }
    ],
    "hostRules": [
        {
            "matchHost": "ghcr.io",
            "hostType": "docker"
        }
    ]
}
